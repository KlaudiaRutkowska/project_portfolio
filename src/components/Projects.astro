---
import { Image } from "astro:assets";
import projectsPhoto1 from "../images/projects-photo1.jpg";
import projectsPhoto2 from "../images/projects-photo2.jpg";
import projectsPhoto3 from "../images/projects-photo3.jpg";
import projectsPhoto4 from "../images/projects-photo4.jpg";
---

<section>
    <div class="container py-[150px]">
        <h2 class="mb-[150px] text-dark-blue text-5xl font-semibold text-center">It's great to always give the customer the best feed.</h2>

        <div class="grid auto-cols-max gap-[30px] grid-flow-row">
            <figure>
                <Image src={projectsPhoto1} alt="" />
            </figure>
            <figure class="row-span-2">
                <Image src={projectsPhoto2} alt=""/>
            </figure>
            <figure>
                <Image src={projectsPhoto3} alt=""/>
            </figure>
            <figure class="col-span-2">
                <Image src={projectsPhoto4} alt=""/>
            </figure>
        </div>
    </div>
</section>